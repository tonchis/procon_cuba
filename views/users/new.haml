.page-header
  %h1 Register!
.row
  .span8.offset3
    - if session[:error]
      .alert-message.error
        = session[:error]
    %form(accept-charset="UTF-8" action="/users" class="new_user" id="new_user" method="post")
      %fieldset
        .clearfix
          %label(for="user_username") Username
          .input
            %input(id="user_username" name="username" size="30" type="text")
        .clearfix
          %label(for="user_password") Password
          .input
            %input(id="user_password" name="passwd" size="30" type="password")
        .clearfix
          %label(for="user_password_confirmation") Password confirmation
          .input
            %input(id="user_password_confirmation" name="passwd_conf" size="30" type="password")
        .actions
          %input(class="btn primary" name="commit" type="submit" value="Create User")

